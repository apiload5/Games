<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ticnocity.bobbleshooter" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Bobble Shooter</name>
    <description>Fun offline HTML5 bubble shooting game with ads support</description>
    <author email="ticnocity@gmail.com" href="https://ticnocity.blogspot.com">
        Ticnocity
    </author>

    <!-- Game start file -->
    <content src="index.html" />

    <!-- Preferences -->
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="BackgroundColor" value="#000000" />
</widget>
